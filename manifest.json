{
    "manifest_version" : 3,
    "name": "AI Markdown Extractor",
    "version": "1.0",
    "description": "Extracts markdown from web pages for better AI responses",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32" : "icons/icon32.png",
        "48": "icons/icon48.png",
        "64" : "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "resources": [
        "preview/preview.html",
        "preview/preview.css",
        "preview/preview.js"
        ],
        "matches": ["<all_urls>"]
    }]
}